// Use DBML to define your database structure
// Docs: https://dbml.dbdiagram.io/docs
TABLE categories {
  id int
  character_code varchar
  name_category varchar
}

TABLE users {
    id int
    date_registration datetime
    user_name varchar
    email varchar
    user_password char
    city varchar
    user_role varchar
    is_available boolean
}

TABLE tasks {
    id int
    date_public datetime
    task_status_code varchar
    task_status varchar
    title varchar
    task_description text
    task_file text
    budget int
    city int
    city_lon varchar
    city_lat varchar
    date_finish date
    category_id int
    client_id int
    performer_id int
}

TABLE cities {
    id int
    city int
    city_name varchar
    city_lon varchar
    city_lat varchar
}

TABLE reviews {
    id int
    date_comment datetime
    review_description text
    review_mark int
    reviewer int
}

TABLE profile {
    id int
    img varchar
    birth_date date
    user_description varchar
    telephone varchar
    telegram varchar
    mark_id int
    user_id int
    review_id int
}

TABLE response {
    id int
    date_response datetime
    response_description text
    price int
    performer int
    response_mark int
}



